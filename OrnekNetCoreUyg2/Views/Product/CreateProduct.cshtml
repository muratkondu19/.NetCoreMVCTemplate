@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model OrnekNetCoreUyg2.Models.Product

@*controller belirtilmez ise varsayılan controllera ait olmaktadır ->Product*@
<form asp-action="CreateProduct" asp-controller="Product" method="post">
    @*Form içerinde kullanıcıdan gelecek olan datalarda input name'leriyle postu karşılacayacak olan actiondaki parametrenin değerleriyle aynı olmaldır,aynıysa otomatik bind ettirilirler*@
    <input type="number" name="Id" placeholder="ID" />
    <br />
    <input type="text" name="ProductName" placeholder="Product Name" />
    <br />
    <input type="number" name="Quantity" placeholder="Quantity" />
    <br />
    @*butona tıklanınca form tetiklenir hedef actiona ilgli türde isteği yapmaktadır*@
    <button>Ürün Ekle</button>
</form>

@*inputlara name değeri vermeyerek, inputları product türünden bir nesneyle otomatik bind edilebilir hale getirebiliriz*@
@*bunun için sayfanın modeli kullanılabilir -> @model OrnekNetCoreUyg2.Models.Product  *@
<form asp-action="CreateProduct" asp-controller="Product" method="post">
    @*asp-for ->sayfanın modelindeki hangi prop ile bind edileceğini belirler*@
    <input type="number" asp-for="Id" placeholder="ID" />
    @*asp-for kullanımıyla name bildirmeye gerek yoktur. prop kendisi getirerek tanımlamaya izin verir *@
    <br />
    <input type="text" asp-for="ProductName" placeholder="Product Name" />
    <br />
    <input type="number" asp-for="Quantity" placeholder="Quantity" />
    <br />
    <button>Ürün Ekle</button>
</form>


